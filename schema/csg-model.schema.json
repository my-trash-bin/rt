{
  "$id": "rt/csg-model",
  "title": "RT CSG model",
  "description": "CSG model for RT",
  "$ref": "#/$defs/root",
  "$defs": {
    "root": {
      "oneOf": [
        { "$ref": "#/$defs/compound" },
        { "$ref": "#/$defs/primitive" }
      ]
    },
    "compound": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of CSG operation",
          "enum": ["union", "intersection", "difference"]
        },
        "a": { "$ref": "#/$defs/root" },
        "b": { "$ref": "#/$defs/root" }
      },
      "required": ["type", "a", "b"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "primitive": {
      "oneOf": [
        { "$ref": "#/$defs/compound" },
        { "$ref": "#/$defs/primitive" }
      ]
    },
    "material": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "ambient": { "$ref": "map.schema.json#/$defs/map" },
        "diffuse": { "$ref": "map.schema.json#/$defs/map" },
        "specular": { "$ref": "map.schema.json#/$defs/map" },
        "specularLobe": { "type": "number" },
        "normal": { "$ref": "map.schema.json#/$defs/map" }
      }
    },
    "material-no-map": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "ambient": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "diffuse": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "specular": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "specularLobe": { "type": "number" }
      }
    },
    "has-optional-position": {
      "properties": { "position": { "$ref": "base-types.schema.json#/$defs/position" } }
    },
    "has-optional-rotation": {
      "properties": { "rotation": { "$ref": "base-types.schema.json#/$defs/rotation" } }
    },
    "has-optional-transform": {
      "properties": { "transform": { "$ref": "base-types.schema.json#/$defs/transform" } }
    },
    "group": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of object",
          "enum": ["group"]
        },
        "children": { "type": "array", "items": { "$ref": "#/$defs/object" } }
      },
      "required": ["type", "children"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "primitive-sphere": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["sphere"]
        },
        "radius": {
          "type": "number",
          "description": "radius of sphere",
          "exclusiveMinimum": 0
        },
        "material": { "$ref": "#/$defs/material" }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-position" },
        { "$ref": "#/$defs/has-optional-rotation" },
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-cone": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cone"]
        },
        "radius": {
          "type": "number",
          "description": "radius of cone bottom",
          "exclusiveMinimum": 0
        },
        "height": {
          "type": "number",
          "description": "cone height",
          "exclusiveMinimum": 0
        },
        "material": {
          "oneOf": [
            { "$ref": "#/$defs/material" },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/material",
                "description": "material for [side, bottom]"
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-position" },
        { "$ref": "#/$defs/has-optional-rotation" },
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-cylinder": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cylinder"]
        },
        "radius": {
          "type": "number",
          "description": "radius of cylinder bottom",
          "exclusiveMinimum": 0
        },
        "height": {
          "type": "number",
          "description": "cylinder height",
          "exclusiveMinimum": 0
        },
        "material": {
          "oneOf": [
            { "$ref": "#/$defs/material" },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/material",
                "description": "material for [side, top, bottom]"
              },
              "minItems": 3,
              "maxItems": 3
            }
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-position" },
        { "$ref": "#/$defs/has-optional-rotation" },
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-cube": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cube"]
        },
        "size": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number",
                "description": "size [x, y, z]",
                "exclusiveMinimum": 0
              },
              "minItems": 3,
              "maxItems": 3
            },
            { "type": "number", "exclusiveMinimum": 0 }
          ]
        },
        "material": {
          "oneOf": [
            { "$ref": "#/$defs/material" },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/material",
                "description": "material for [top, bottom, left, right, front, back]"
              },
              "minItems": 3,
              "maxItems": 3
            }
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-position" },
        { "$ref": "#/$defs/has-optional-rotation" },
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-torus": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["torus"]
        },
        "majorRadius": {
          "type": "number",
          "description": "major radius of torus",
          "exclusiveMinimum": 0
        },
        "minorRadius": {
          "type": "number",
          "description": "minor radius of torus",
          "exclusiveMinimum": 0
        },
        "material": { "$ref": "#/$defs/material" }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-position" },
        { "$ref": "#/$defs/has-optional-rotation" },
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-plane": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "coefficients": {
          "x^4": { "type": "number" },
          "y^4": { "type": "number" },
          "z^4": { "type": "number" },
          "x^3y": { "type": "number" },
          "x^3z": { "type": "number" },
          "xy^3": { "type": "number" },
          "y^3z": { "type": "number" },
          "xz^3": { "type": "number" },
          "yz^3": { "type": "number" },
          "x^2y^2": { "type": "number" },
          "y^2z^2": { "type": "number" },
          "x^2z^2": { "type": "number" },
          "x^2yz": { "type": "number" },
          "xy^2z": { "type": "number" },
          "xyz^2": { "type": "number" },
          "x^3": { "type": "number" },
          "y^3": { "type": "number" },
          "z^3": { "type": "number" },
          "x^2y": { "type": "number" },
          "x^2z": { "type": "number" },
          "xy^2": { "type": "number" },
          "y^2z": { "type": "number" },
          "xz^2": { "type": "number" },
          "yz^2": { "type": "number" },
          "xyz": { "type": "number" },
          "x^2": { "type": "number" },
          "y^2": { "type": "number" },
          "z^2": { "type": "number" },
          "xy": { "type": "number" },
          "yz": { "type": "number" },
          "xz": { "type": "number" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "z": { "type": "number" },
          "1": { "type": "number" }
        },
        "isInside": { "type": "boolean" },
        "material": { "$ref": "#/$defs/material-no-map" }
      },
      "required": ["coefficients"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "primitive-model": {
      "oneOf": [
        { "$ref": "#/$defs/primitive-sphere" },
        { "$ref": "#/$defs/primitive-cone" },
        { "$ref": "#/$defs/primitive-cylinder" },
        { "$ref": "#/$defs/primitive-cube" },
        { "$ref": "#/$defs/primitive-torus" },
        { "$ref": "#/$defs/primitive-plane" }
      ]
    },
    "csg-union": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of operation",
          "enum": ["union"]
        },
        "children": {
          "type": "array",
          "description": "operand of operation",
          "items": { "$ref": "#/$defs/csg-model" }
        }
      },
      "required": ["type", "children"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "csg-intersection": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of operation",
          "enum": ["intersection"]
        },
        "children": {
          "type": "array",
          "description": "operand of operation",
          "items": { "$ref": "#/$defs/csg-model" },
          "minItems": 2
        }
      },
      "required": ["type", "children"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "csg-difference": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of operation",
          "enum": ["difference"]
        },
        "from": { "$ref": "#/$defs/csg-model" },
        "subtract": { "$ref": "#/$defs/csg-model" }
      },
      "required": ["type", "from", "subtract"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "constructive-model": {
      "oneOf": [
        { "$ref": "#/$defs/csg-union" },
        { "$ref": "#/$defs/csg-intersection" },
        { "$ref": "#/$defs/csg-difference" }
      ]
    },
    "csg-model": {
      "oneOf": [
        {
          "oneOf": [
            { "$ref": "#/$defs/primitive-model" },
            { "$ref": "#/$defs/constructive-model" }
          ]
        },
        { "$ref": "#/$defs/ref" }
      ]
    },
    "csg-object": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of object",
          "enum": ["csg"]
        },
        "model": { "$ref": "#/$defs/csg-model" },
        "transparent": {
          "oneOf": [
            {
              "type": "boolean",
              "description": "set to false to make non-transparent",
              "enum": [false]
            },
            {
              "type": "object",
              "unevaluatedProperties": false,
              "properties": {
                "transparency": {
                  "type": "number",
                  "description": "transparency",
                  "exclusiveMinimum": 0,
                  "exclusiveMaximum": 1
                },
                "color": {
                  "description": "transmission filter color",
                  "$ref": "base-types.schema.json#/$defs/ldr-color"
                },
                "opticalDensity": {
                  "type": "number",
                  "description": "index of refraction",
                  "exclusiveMinimum": 0
                }
              },
              "required": ["transparency"]
            }
          ]
        }
      },
      "required": ["type", "model"]
    },
    "obj-object": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of object",
          "enum": ["obj"]
        },
        "path": { "type": "string", "description": "path to .obj file" }
      },
      "required": ["type", "path"]
    },
    "ref": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "ref": { "type": "string", "description": "reference, key of defs" }
      },
      "required": ["ref"]
    },
    "model": {
      "oneOf": [
        { "$ref": "#/$defs/csg-object" },
        { "$ref": "#/$defs/obj-object" }
      ]
    },
    "light-point": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of light",
          "enum": ["point"]
        },
        "color": { "$ref": "base-types.schema.json#/$defs/hdr-color" },
        "position": { "$ref": "base-types.schema.json#/$defs/position" },
        "range": {
          "type": "number",
          "description": "default is infinity",
          "exclusiveMinimum": 0
        },
        "attenuation": {
          "type": "boolean",
          "description": "whether use attenuation, default is true"
        }
      },
      "required": ["type", "color", "position"]
    },
    "light-directional": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of light",
          "enum": ["directional"]
        },
        "color": { "$ref": "base-types.schema.json#/$defs/hdr-color" },
        "direction": { "$ref": "base-types.schema.json#/$defs/direction" }
      },
      "required": ["type", "color", "direction"]
    },
    "light-spot": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of light",
          "enum": ["spot"]
        },
        "color": { "$ref": "base-types.schema.json#/$defs/hdr-color" },
        "position": { "$ref": "base-types.schema.json#/$defs/position" },
        "angle": {
          "description": "angle for the spot light",
          "$ref": "base-types.schema.json#/$defs/angle-convex"
        },
        "direction": { "$ref": "base-types.schema.json#/$defs/direction" },
        "range": {
          "type": "number",
          "description": "default is infinity",
          "exclusiveMinimum": 0
        },
        "attenuation": {
          "type": "boolean",
          "description": "whether use attenuation, default is true"
        }
      },
      "required": ["type", "color", "position", "angle", "direction"]
    },
    "light": {
      "oneOf": [
        { "$ref": "#/$defs/light-point" },
        { "$ref": "#/$defs/light-directional" },
        { "$ref": "#/$defs/light-spot" }
      ]
    },
    "object": {
      "type": "object",
      "unevaluatedProperties": false,
      "oneOf": [
        { "$ref": "#/$defs/group" },
        { "$ref": "#/$defs/model" },
        { "$ref": "#/$defs/light" },
        { "$ref": "#/$defs/ref" }
      ]
    }
  }
}
