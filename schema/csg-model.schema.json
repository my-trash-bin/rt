{
  "$id": "rt/csg-model",
  "title": "RT CSG model",
  "description": "CSG model for RT",
  "$ref": "#/$defs/root",
  "$defs": {
    "root": {
      "oneOf": [
        { "$ref": "#/$defs/compound" },
        { "$ref": "#/$defs/primitive" }
      ]
    },
    "compound": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of CSG operation",
          "enum": ["union", "intersection", "difference"]
        },
        "a": { "$ref": "#/$defs/root" },
        "b": { "$ref": "#/$defs/root" }
      },
      "required": ["type", "a", "b"]
    },
    "material": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "albedo": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "roughness": { "type": "number" },
        "metallic": { "type": "number" }
      }
    },
    "primitive-sphere": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["sphere"]
        },
        "radius": {
          "type": "number",
          "description": "radius of sphere",
          "exclusiveMinimum": 0
        },
        "position": { "$ref": "base-types.schema.json#/$defs/position" },
        "material": { "$ref": "#/$defs/material" }
      },
      "required": ["type"]
    },
    "primitive-cube": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cube"]
        },
        "size": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number",
                "description": "size [x, y, z]",
                "exclusiveMinimum": 0
              },
              "minItems": 3,
              "maxItems": 3
            },
            { "type": "number", "exclusiveMinimum": 0 }
          ]
        },
        "position": { "$ref": "base-types.schema.json#/$defs/position" },
        "material": { "$ref": "#/$defs/material" }
      },
      "required": ["type"]
    },
    "primitive-plane": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["plane"]
        },
        "coefficients": {
          "x^4": { "type": "number" },
          "y^4": { "type": "number" },
          "z^4": { "type": "number" },
          "x^3y": { "type": "number" },
          "x^3z": { "type": "number" },
          "xy^3": { "type": "number" },
          "y^3z": { "type": "number" },
          "xz^3": { "type": "number" },
          "yz^3": { "type": "number" },
          "x^2y^2": { "type": "number" },
          "y^2z^2": { "type": "number" },
          "x^2z^2": { "type": "number" },
          "x^2yz": { "type": "number" },
          "xy^2z": { "type": "number" },
          "xyz^2": { "type": "number" },
          "x^3": { "type": "number" },
          "y^3": { "type": "number" },
          "z^3": { "type": "number" },
          "x^2y": { "type": "number" },
          "x^2z": { "type": "number" },
          "xy^2": { "type": "number" },
          "y^2z": { "type": "number" },
          "xz^2": { "type": "number" },
          "yz^2": { "type": "number" },
          "xyz": { "type": "number" },
          "x^2": { "type": "number" },
          "y^2": { "type": "number" },
          "z^2": { "type": "number" },
          "xy": { "type": "number" },
          "yz": { "type": "number" },
          "xz": { "type": "number" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "z": { "type": "number" },
          "1": { "type": "number" }
        },
        "isPointInside": { "type": "boolean" },
        "point": { "$ref": "base-types.schema.json#/$defs/position" },
        "material": { "$ref": "#/$defs/material" },
        "position": { "$ref": "base-types.schema.json#/$defs/position" }
      },
      "required": ["coefficients", "isPointInside", "point"]
    },
    "primitive": {
      "oneOf": [
        { "$ref": "#/$defs/primitive-sphere" },
        { "$ref": "#/$defs/primitive-cube" },
        { "$ref": "#/$defs/primitive-plane" }
      ]
    }
  }
}
