{
  "$id": "rt/csg-model",
  "title": "RT CSG model",
  "description": "CSG model for RT",
  "$ref": "#/$defs/root",
  "$defs": {
    "root": {
      "oneOf": [
        { "$ref": "#/$defs/compound" },
        { "$ref": "#/$defs/primitive" }
      ]
    },
    "compound": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of CSG operation",
          "enum": ["union", "intersection", "difference"]
        },
        "a": { "$ref": "#/$defs/root" },
        "b": { "$ref": "#/$defs/root" }
      },
      "required": ["type", "a", "b"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "material": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "ambient": { "$ref": "#/$defs/map" },
        "diffuse": { "$ref": "#/$defs/map" },
        "specular": { "$ref": "#/$defs/map" },
        "specularLobe": { "type": "number" },
        "normal": { "$ref": "#/$defs/map" }
      }
    },
    "material-no-map": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "ambient": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "diffuse": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "specular": { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        "specularLobe": { "type": "number" },
        "normal": { "$ref": "base-types.schema.json#/$defs/ldr-color" }
      }
    },
    "map": {
      "oneOf": [
        { "$ref": "base-types.schema.json#/$defs/ldr-color" },
        { "type": "string", "description": "path to map" }
      ]
    },
    "has-optional-transform": {
      "properties": { "transform": { "$ref": "base-types.schema.json#/$defs/transform" } }
    },
    "primitive-sphere": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["sphere"]
        },
        "radius": {
          "type": "number",
          "description": "radius of sphere",
          "exclusiveMinimum": 0
        },
        "material": { "$ref": "#/$defs/material" }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-cone": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cone"]
        },
        "radius": {
          "type": "number",
          "description": "radius of cone bottom",
          "exclusiveMinimum": 0
        },
        "height": {
          "type": "number",
          "description": "cone height",
          "exclusiveMinimum": 0
        },
        "material": {
          "oneOf": [
            { "$ref": "#/$defs/material" },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/material",
                "description": "material for [side, bottom]"
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-cylinder": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cylinder"]
        },
        "radius": {
          "type": "number",
          "description": "radius of cylinder bottom",
          "exclusiveMinimum": 0
        },
        "height": {
          "type": "number",
          "description": "cylinder height",
          "exclusiveMinimum": 0
        },
        "material": {
          "oneOf": [
            { "$ref": "#/$defs/material" },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/material",
                "description": "material for [side, top, bottom]"
              },
              "minItems": 3,
              "maxItems": 3
            }
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-cube": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["cube"]
        },
        "size": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "number",
                "description": "size [x, y, z]",
                "exclusiveMinimum": 0
              },
              "minItems": 3,
              "maxItems": 3
            },
            { "type": "number", "exclusiveMinimum": 0 }
          ]
        },
        "material": {
          "oneOf": [
            { "$ref": "#/$defs/material" },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/material",
                "description": "material for [top, bottom, left, right, front, back]"
              },
              "minItems": 6,
              "maxItems": 6
            }
          ]
        }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-torus": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["torus"]
        },
        "majorRadius": {
          "type": "number",
          "description": "major radius of torus",
          "exclusiveMinimum": 0
        },
        "minorRadius": {
          "type": "number",
          "description": "minor radius of torus",
          "exclusiveMinimum": 0
        },
        "material": { "$ref": "#/$defs/material" }
      },
      "required": ["type"],
      "allOf": [
        { "$ref": "#/$defs/has-optional-transform" }
      ]
    },
    "primitive-plane": {
      "type": "object",
      "unevaluatedProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "type of solid geometry",
          "enum": ["plane"]
        },
        "coefficients": {
          "x^4": { "type": "number" },
          "y^4": { "type": "number" },
          "z^4": { "type": "number" },
          "x^3y": { "type": "number" },
          "x^3z": { "type": "number" },
          "xy^3": { "type": "number" },
          "y^3z": { "type": "number" },
          "xz^3": { "type": "number" },
          "yz^3": { "type": "number" },
          "x^2y^2": { "type": "number" },
          "y^2z^2": { "type": "number" },
          "x^2z^2": { "type": "number" },
          "x^2yz": { "type": "number" },
          "xy^2z": { "type": "number" },
          "xyz^2": { "type": "number" },
          "x^3": { "type": "number" },
          "y^3": { "type": "number" },
          "z^3": { "type": "number" },
          "x^2y": { "type": "number" },
          "x^2z": { "type": "number" },
          "xy^2": { "type": "number" },
          "y^2z": { "type": "number" },
          "xz^2": { "type": "number" },
          "yz^2": { "type": "number" },
          "xyz": { "type": "number" },
          "x^2": { "type": "number" },
          "y^2": { "type": "number" },
          "z^2": { "type": "number" },
          "xy": { "type": "number" },
          "yz": { "type": "number" },
          "xz": { "type": "number" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "z": { "type": "number" },
          "1": { "type": "number" }
        },
        "isPointInside": { "type": "boolean" },
        "point": { "$ref": "base-types.schema.json#/$defs/position" },
        "material": { "$ref": "#/$defs/material-no-map" }
      },
      "required": ["coefficients"],
      "allOf": [{ "$ref": "#/$defs/has-optional-transform" }]
    },
    "primitive": {
      "oneOf": [
        { "$ref": "#/$defs/primitive-sphere" },
        { "$ref": "#/$defs/primitive-cone" },
        { "$ref": "#/$defs/primitive-cylinder" },
        { "$ref": "#/$defs/primitive-cube" },
        { "$ref": "#/$defs/primitive-torus" },
        { "$ref": "#/$defs/primitive-plane" }
      ]
    }
  }
}
