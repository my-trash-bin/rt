{
  "files.associations": {
    "*.rt": "jsonc",
  },
  "json.schemas": [
    {
      "fileMatch": ["*.schema.json"],
      "url": "https://json-schema.org/draft/2020-12/schema",
    },
    {
      "fileMatch": ["*.map.rt"],
      "url": "./schema/map.schema.json",
    },
    {
      "fileMatch": ["*.csg-model.rt"],
      "url": "./schema/csg-model.schema.json",
    },
    {
      "fileMatch": ["*.object.rt"],
      "url": "./schema/object.schema.json",
    },
    {
      "fileMatch": ["*.scene.rt", "scene.rt"],
      "url": "./schema/scene.schema.json",
    },
  ],
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
  },
}
